    <button class="scroll-button right" type="button" onclick="scrollRightContainer()">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>
</form>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Select all .filter div elements
    const filters = document.querySelectorAll('#filters .filter');

    filters.forEach(function(filter) {
      // Add click event listener to each filter div
      filter.addEventListener('click', function() {
        // Find the form element
        const form = filter.closest('form');

        // Create a new input element
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'category';
        input.value = filter.querySelector('p').textContent;

        // Append the input to the form
        form.appendChild(input);

        // Submit the form
        form.submit();
      });
    });
  });

  function scrollLeftContainer() {
    const container = document.getElementById('filters');
    container.scrollBy({ left: -200, behavior: 'smooth' });
  }

  function scrollRightContainer() {
    const container = document.getElementById('filters');
    container.scrollBy({ left: 200, behavior: 'smooth' });
  }
</script>