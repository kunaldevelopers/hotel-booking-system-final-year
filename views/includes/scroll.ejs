      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic-City</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Swimming-Pools</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-motorcycle"></i></div>
        <p>Riding</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-basketball-ball"></i></div>
        <p>Sports</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-laptop-code"></i></div>
