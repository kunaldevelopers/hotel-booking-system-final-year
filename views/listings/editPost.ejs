<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2"><br>

    <h2>Edit Post :-</h2>
    <form method="post" novalidate class="needs-validation" action="/listings/<%= data._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= data.title %>" id="" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Title</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" cols="30" rows="10" class="form-control" required><%= data.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Description</div>
        </div>
        
        <div class="mb-3">
            <p><b>Original Listing Image</b></p>
            <img src="<%= newOriginalImageUrl %>" alt="" style="width: 250px;">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" id="" class="form-control">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Upload Image</div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" id="" value="<%= data.location %>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Location</div>
        </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id="" value="<%= data.price %>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" id="" value="<%= data.country %>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Country</div>
        </div>
    </div>
        
        <button type="submit" class="btn btn-dark edit-btn mt-3 mb-3">Update</button>
    </form>
    </div>
    </div>
</body>

